        <createProcedure dbms="oracle" relativeToChangelogFile="true" procedureName="rns_quot_remark_dtl_procedure" encoding="utf8" catalogName="rns_quot_remark_dtl_catalog"> CREATE TRIGGER rns_quot_remark_dtl_trigger BEFORE INSERT ON rns_quotation_remark_details FOR EACH ROW BEGIN IF( :NEW.id IS NULL ) THEN :NEW.id:=rns_quot_remark_dtl_seq.NEXTVAL; END IF; END; </createProcedure>
