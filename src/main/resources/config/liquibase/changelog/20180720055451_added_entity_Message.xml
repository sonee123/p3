<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <property name="now" value="now()" dbms="h2"/>

    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle, mssql"/>

    <!--
        Added the entity Message.
    -->
    <changeSet id="20180720055451-1" author="jhipster">
        <createTable tableName="message">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="from_mail" type="varchar(255)">
                <constraints nullable="false" />
            </column>

            <column name="to_mail" type="varchar(255)">
                <constraints nullable="false" />
            </column>

            <column name="subject" type="varchar(500)">
                <constraints nullable="false" />
            </column>

            <column name="message_body" type="varchar(2000)">
                <constraints nullable="false" />
            </column>

            <column name="quotation_id" type="bigint">
                <constraints nullable="false" />
            </column>

            <column name="created_by" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="created_date" type="timestamp">
                <constraints nullable="true" />
            </column>
            <column name="readflag" type="varchar(1)">
                <constraints nullable="true" />
            </column>

            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>
        <createSequence startValue="1" sequenceName="message_seq" ordered="true" incrementBy="1" cycle="false"/>
        <createProcedure dbms="oracle" relativeToChangelogFile="true" procedureName="message_procedure" encoding="utf8" catalogName="message_catalog"> CREATE TRIGGER message_trigger BEFORE INSERT ON message FOR EACH ROW BEGIN IF( :NEW.id IS NULL ) THEN :NEW.id:=message_seq.NEXTVAL; END IF; END; </createProcedure>

    </changeSet>
    <!-- jhipster-needle-liquibase-add-changeset - JHipster will add changesets here, do not remove-->
</databaseChangeLog>
