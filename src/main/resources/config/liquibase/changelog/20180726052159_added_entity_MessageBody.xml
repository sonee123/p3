<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <property name="now" value="now()" dbms="h2"/>

    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle, mssql"/>

    <!--
        Added the entity MessageBody.
    -->
    <changeSet id="20180726052159-1" author="jhipster">
        <createTable tableName="message_body">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="message_id" type="bigint">
                <constraints nullable="false" />
            </column>

            <column name="message_body" type="varchar(2000)">
                <constraints nullable="false" />
            </column>

            <column name="created_by" type="varchar(50)">
                <constraints nullable="true" />
            </column>

            <column name="created_date" type="date">
                <constraints nullable="true" />
            </column>

            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>
        <createSequence startValue="1" sequenceName="message_body_seq" ordered="true" incrementBy="1" cycle="false"/>
        <createProcedure dbms="oracle" relativeToChangelogFile="true" procedureName="message_body_procedure" encoding="utf8" catalogName="message_body_catalog"> CREATE TRIGGER message_body_trigger BEFORE INSERT ON message_body FOR EACH ROW BEGIN IF( :NEW.id IS NULL ) THEN :NEW.id:=message_body_seq.NEXTVAL; END IF; END; </createProcedure>
    </changeSet>
    <!-- jhipster-needle-liquibase-add-changeset - JHipster will add changesets here, do not remove-->
</databaseChangeLog>
